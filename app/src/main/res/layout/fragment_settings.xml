<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/settings"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="12dp"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:padding="8dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="5dp">
      <LinearLayout
        android:id="@+id/change_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_margin="12dp">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Change your username:"/>
        <!--TODO get username as string resource for hint-->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Username..."/>
          <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"/>
        </LinearLayout>
      </LinearLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:padding="8dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="5dp">
      <LinearLayout
        android:id="@+id/change_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_username"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Change your pet's name:"/>
        <!--TODO get emoji_name as string resource for hint-->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Emoji name..."/>
          <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"/>
        </LinearLayout>
      </LinearLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:padding="8dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="5dp">
      <LinearLayout
        android:id="@+id/change_emoji_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pet_name"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Change your pet:"/>
        <!--TODO get emoji_character as string resource for hint-->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ðŸœ"/>
          <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"/>
        </LinearLayout>
      </LinearLayout>
  </android.support.v7.widget.CardView>



</LinearLayout>