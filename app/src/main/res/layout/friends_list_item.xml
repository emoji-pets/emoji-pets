<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
    <TextView
      android:id="@+id/friends_list_emoji_character"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:textSize="36dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <TextView
      android:id="@+id/friends_list_player_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:textSize="36dp"
      app:layout_constraintStart_toEndOf="@+id/friends_list_emoji_character"
      app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
      android:id="@+id/friends_list_emoji_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="textStart"
      android:layout_marginTop="8dp"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintStart_toEndOf="@+id/friends_list_player_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/friends_list_status"/>

    <TextView
      android:id="@+id/friends_list_status"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="textStart"
      android:layout_marginTop="8dp"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintStart_toEndOf="@+id/friends_list_player_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/friends_list_emoji_name"/>
    </android.support.constraint.ConstraintLayout>
