    <!--android:layout_marginTop="18dp"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/mana"/>-->

  <android.support.constraint.Guideline
    android:id="@+id/right_guide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent=".75"/>
<!--     android:layout_marginTop="18dp"
    android:layout_marginLeft="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/mana"/> -->

  <android.support.design.widget.TextInputLayout
    android:id="@+id/pet_status_edit_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/edit_text_background"
    app:hintAnimationEnabled="true"
    app:hintEnabled="true"
    android:layout_marginTop="24dp"
    android:layout_marginStart="12dp"
    app:layout_constraintBottom_toTopOf="@+id/pet"
    app:layout_constraintEnd_toEndOf="@id/right_guide"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/play_top">
    <android.support.design.widget.TextInputEditText
      android:id="@+id/pet_status_edit"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="4dp"
      android:layout_marginTop="8dp"
      android:background="@null"
      android:hint="@string/status"
      android:nextFocusLeft="@id/pet_status_edit"
      android:nextFocusUp="@id/pet_status_edit"
      android:selectAllOnFocus="true"/>
  </android.support.design.widget.TextInputLayout>

  <!--android:background="@drawable/edit_text_background"-->

