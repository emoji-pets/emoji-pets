<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusableInTouchMode="true"
  android:id="@+id/pet_layout"
  android:background="@drawable/gradient_lists">

  <TextView
    android:id="@+id/cuddle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/play_top"
    tools:text="Cuddle"/>

  <TextView
    android:id="@+id/play_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/cuddle"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Play"/>

  <TextView
    android:id="@+id/hunger_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cuddle"
    app:layout_constraintEnd_toStartOf="@+id/potty_top"
    tools:text="Hunger"/>

  <TextView
    android:id="@+id/potty_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/hunger_top"
    app:layout_constraintTop_toBottomOf="@+id/play_top"
    tools:text="Potty"/>

  <!--<TextView-->
    <!--android:id="@+id/pet_status"-->
    <!--android:layout_width="wrap_content"-->
