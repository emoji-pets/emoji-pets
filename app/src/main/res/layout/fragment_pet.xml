  <com.varunest.sparkbutton.SparkButton
    android:id="@+id/food"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.674"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.829"
    app:sparkbutton_activeImage="@drawable/food_emoji_active"
    app:sparkbutton_iconSize="40dp"
    app:sparkbutton_inActiveImage="@drawable/food_emoji_inactive"
    app:sparkbutton_primaryColor="@color/food_color1"
    app:sparkbutton_secondaryColor="@color/food_color2"/>

  <com.varunest.sparkbutton.SparkButton
    android:id="@+id/cuddles"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.052"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.829"
    app:sparkbutton_activeImage="@drawable/cuddle_active"
    app:sparkbutton_iconSize="40dp"
    app:sparkbutton_inActiveImage="@drawable/cuddle_inactive"
    app:sparkbutton_primaryColor="@color/hug_color1"
    app:sparkbutton_secondaryColor="@color/hug_color2"/>

  <com.varunest.sparkbutton.SparkButton
    android:id="@+id/play"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.328"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.829"
    app:sparkbutton_activeImage="@drawable/play_active"
    app:sparkbutton_iconSize="40dp"
    app:sparkbutton_inActiveImage="@drawable/play_inactive"
    app:sparkbutton_primaryColor="@color/play_color1"
    app:sparkbutton_secondaryColor="@color/play_color2"/>

  <com.varunest.sparkbutton.SparkButton
    android:id="@+id/potty"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.947"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.829"
    app:sparkbutton_activeImage="@drawable/poop_active"
    app:sparkbutton_iconSize="40dp"
    app:sparkbutton_inActiveImage="@drawable/poop_inactive"
    app:sparkbutton_primaryColor="@color/potty_color1"
    app:sparkbutton_secondaryColor="@color/potty_color2"/>
  <TextView
    android:id="@+id/pet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:textSize="128sp"
    android:textColor="@color/colorPrimaryDark"
    app:layout_constraintBottom_toTopOf="@+id/potty"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/play_top"/>

</android.support.constraint.ConstraintLayout>
